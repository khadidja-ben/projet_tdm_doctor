<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projet_tdm_medcin">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Medico Doctor"
        android:roundIcon="@mipmap/ic_launcher_plus"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projet_tdm_medcin">
        <activity android:name=".ui.bookings.DetailBookingActivity" android:theme="@style/Theme.Projet_tdm_medcin.NoActionBar"></activity>
        <activity android:name=".ui.bookings.ScanActivity" android:theme="@style/Theme.Projet_tdm_medcin.NoActionBar"/>
        <activity
            android:name=".ui.bookings.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Projet_tdm_medcin.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashScreen"
            android:theme="@style/Theme.Projet_tdm_medcin.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.splash.OnBoardingScreens"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ui.AuthActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>